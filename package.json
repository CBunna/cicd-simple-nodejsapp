{
    "name": "devops-practice-app",
    "version": "1.0.0",
    "description": "Simple Node.js app for DevOps practice",
    "main": "src/app.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "build": "mkdir -p dist && cp -r src dist/ && cp package*.json dist/",
        "test": "NODE_ENV=test jest",
        "test:watch": "NODE_ENV=test jest --watch",
        "lint": "eslint src/",
        "health-check": "curl -f http://localhost:3000/health || exit 1"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-ejs-layouts": "^2.5.1",
        "helmet": "^7.1.0",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "eslint": "^9.0.0",
        "supertest": "^7.1.3",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}